<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.KMvi" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="colorPrimaryDark">@color/my_light_primary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Ensure ActionBar/Toolbar background follows colorPrimary -->
        <item name="android:windowActionBar">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/SampleActionBar</item>
        <item name="actionBarStyle">@style/SampleActionBar</item>
        <item name="android:toolbarStyle">@style/SampleToolbar</item>
        <item name="toolbarStyle">@style/SampleToolbar</item>
    </style>

    <style name="Theme.KMvi" parent="Base.Theme.KMvi" />

    <!-- Custom ActionBar/Toolbar styles that use colorPrimary as background -->
    <style name="SampleActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="background">?attr/colorPrimary</item>
        <item name="android:height">?attr/actionBarSize</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="SampleToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="background">?attr/colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>
